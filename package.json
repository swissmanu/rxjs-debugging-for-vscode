{
  "name": "rxjs-debugging-for-vs-code",
  "displayName": "RxJS Debugging for Visual Studio Code",
  "description": "Add non-intrusive debugging capabilities for RxJS applications to Visual Studio Code.",
  "icon": "docs/brand/icon.png",
  "version": "0.1.2",
  "repository": {
    "url": "https://github.com/swissmanu/rxjs-debugging-for-vscode"
  },
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Debuggers"
  ],
  "publisher": "manuelalabor",
  "activationEvents": [
    "onDebugResolve:node",
    "onLanguage:typescript",
    "onLanguage:typescriptreact"
  ],
  "contributes": {
    "commands": [
      {
        "category": "RxJS",
        "command": "rxjs-debugging-for-vs-code.command.toggleOperatorLogPointRecommendations",
        "title": "%rxjs-debugging.command.toggleOperatorLogPointRecommendations%"
      }
    ],
    "configuration": {
      "title": "%rxjs-debugging.config.title%",
      "properties": {
        "debug.rxjs.showOperatorLogPointRecommendations": {
          "description": "%rxjs-debugging.config.showOperatorLogPointRecommendations%",
          "type": "boolean",
          "default": true
        },
        "debug.rxjs.hideLiveLogWhenStoppingDebugger": {
          "description": "%rxjs-debugging.config.hideLiveLogWhenStoppingDebugger%",
          "type": "boolean",
          "default": true
        },
        "debug.rxjs.logLevel": {
          "description": "%rxjs-debugging.config.logLevel%",
          "type": "string",
          "default": "Never",
          "enum": [
            "Info",
            "Warn",
            "Error",
            "Never"
          ]
        }
      }
    },
    "colors": [
      {
        "id": "rxjsdebugging.liveLogLineBackgroundColor",
        "description": "Defines the background color for log point events at the end of a line.",
        "defaults": {
          "light": "#00000000",
          "dark": "#00000000",
          "highContrast": "#00000000"
        }
      },
      {
        "id": "rxjsdebugging.liveLogLineForegroundColor",
        "description": "Defines the foreground color for log point events at the end of a line.",
        "defaults": {
          "dark": "#999999bd",
          "light": "#999999bd",
          "highContrast": "#99999999"
        }
      }
    ]
  },
  "main": "./out/extension.js",
  "scripts": {
    "prepare": "husky install",
    "clean": "rm -rf out",
    "build": "rollup --c",
    "watch": "yarn build --watch",
    "test": "yarn test:unit",
    "pretest:integration": "yarn run compile",
    "test:unit": "jest",
    "test:integration": "node ./out/integrationTest/runTest.js",
    "lint": "eslint src --ext ts",
    "pretty": "prettier --write",
    "vscode:prepublish": "NODE_ENV=production yarn build",
    "package": "vsce package --yarn",
    "deploy": "vsce publish --yarn"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "21.0.0",
    "@rollup/plugin-node-resolve": "13.0.5",
    "@rollup/plugin-typescript": "8.2.5",
    "@types/glob": "7.1.3",
    "@types/jest": "26.0.24",
    "@types/node": "14.17.18",
    "@types/stacktrace-js": "2.0.3",
    "@types/vscode": "1.60.0",
    "@types/webpack": "5.28.0",
    "@types/ws": "7.4.4",
    "@typescript-eslint/eslint-plugin": "4.31.2",
    "@typescript-eslint/parser": "4.31.2",
    "eslint": "7.32.0",
    "eslint-plugin-prettier": "3.4.1",
    "glob": "7.1.7",
    "husky": "6.0.0",
    "jest": "26.6.3",
    "lint-staged": "11.1.2",
    "prettier": "2.4.1",
    "rollup": "2.57.0",
    "rollup-plugin-terser": "7.0.2",
    "ts-jest": "26.5.6",
    "tslib": "2.3.1",
    "typescript": "4.4.3",
    "vsce": "1.88.0",
    "vscode-test": "1.6.1",
    "webpack": "git+https://github.com/swissmanu/webpack.git#fix-normalmodule-beforeLoaders-hook"
  },
  "prettier": {
    "printWidth": 120
  },
  "lint-staged": {
    "*.{ts,js,json}": [
      "yarn pretty"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "inversify": "5.1.1",
    "reflect-metadata": "0.1.13",
    "source-map": "0.7.3",
    "stacktrace-js": "2.0.2",
    "typescript": "4.4.3",
    "vscode-nls": "5.0.0",
    "ws": "7.4.5"
  }
}
