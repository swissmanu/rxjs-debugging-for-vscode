// A launch configuration that compiles the extension and then opens it inside a new window
// Use IntelliSense to learn about possible attributes.
// Hover to view descriptions of existing attributes.
// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Testbench: NodeJS",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}/packages/extension",
        "${workspaceFolder}/packages/testbench-nodejs"
      ],
      "outFiles": ["${workspaceFolder}/packages/extension/out/**/*.js"]
    },
    {
      "name": "Testbench: NodeJS with TypeScript",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}/packages/extension",
        "${workspaceFolder}/packages/testbench-nodejs-typescript"
      ],
      "outFiles": ["${workspaceFolder}/packages/extension/out/**/*.js"]
    },
    {
      "name": "Testbench: Webpack",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}/packages/extension",
        "${workspaceFolder}/packages/testbench-webpack"
      ],
      "outFiles": ["${workspaceFolder}/packages/extension/out/**/*.js"]
    }
  ]
}
